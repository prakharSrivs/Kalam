<%- include('../Layout/header') -%>
<div class="container login-container" >
  <%- include('../Layout/flash.ejs') -%>

    <div class=" login-container">
      <form action="/user/login" class="needs-validation col border rounded shadow login-form" method="post" novalidate>
            <div class="display-2 my-5">Login</div>
           <div class="form-group my-2 ">
            <label for="title" class="text-lg">Username :</label>
            <input type="text" name="username" id="title" class="form-control" required>      
            <div class="valid-feedback">
              Looks good!
            </div>   
            </div>   
            <div class="invalid-feedback">
              Invalid Details
            </div>
            <div class="form-group  ">
                <label for="title" class="text-lg">Password  </label>
                <input type="password" name="password" id="title" class="form-control" required>      
                <div class="valid-feedback">
                  Looks good!
                </div>      
                <div class="invalid-feedback">
                  Invalid Details
                </div>
            </div>
            <button type="submit" class="btn btn-info rounded my-5">Login</button>
            <div class="">
              <div class="display4 d-inline align-items-center">New User , Please Register Here First</div>
              <a class="btn btn-info rounded my-4" href="/user/register">Register</a>
            </div>
      </form>
    </div>
    
    </div>
<%- include('../Layout/footer') -%>
