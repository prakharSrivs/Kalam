<%- include('../Layout/header') -%>
<div class="container register-container m-5 p-2" >
    <div class="col-6 m-5 register-container">
    <%- include('../Layout/flash.ejs') -%>
        
      <form action="/user/register" class="needs-validation col border rounded shadow m-5 px-5 " method="post" novalidate>
            <div class="display-2 m-5">Register</div>
           <div class="form-group my-2 ">
            <label for="title" class="text-lg">Username :</label>
            <input type="text" name="username" id="title" class="form-control" required>      
            <div class="valid-feedback">
              Looks good!
            </div>   
            </div>   
            <div class="invalid-feedback">
              Invalid Details
            </div>
            <div class="form-group my-2 ">
                <label for="title" class="text-lg">Email </label>
                <input type="email" name="email" id="title" class="form-control" required>      
                <div class="valid-feedback">
                  Looks good!
                </div>      
                <div class="invalid-feedback">
                  Invalid Details
                </div>
            </div>
            <div class="form-group my-2 ">
                <label for="title" class="text-lg">Password  </label>
                <input type="password" name="password" id="title" class="form-control" required>      
                <div class="valid-feedback">
                  Looks good!
                </div>      
                <div class="invalid-feedback">
                  Invalid Details
                </div>
            </div>
            <button type="submit" class="btn btn-info rounded my-5">Register</button>
      </form>
    </div>
    </div>
<%- include('../Layout/footer') -%>
